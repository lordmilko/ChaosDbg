<Application x:Class="ChaosDbg.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChaosDbg"
             StartupUri="UI/MainWindow.xaml" Exit="App_Exit">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type local:SplitterItemsDockContainer}">
                <local:SplitterItemsControl Orientation="{Binding Orientation}" ItemsSource="{Binding Children}" />
            </DataTemplate>

            <DataTemplate DataType="{x:Type local:TabControlDockContainer}">
                <local:TabControlEx TabStripPlacement="{Binding TabStripPlacement}" ItemsSource="{Binding Children}" />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
